{% style %}
  :root {
    /* Colors */
    --background-color-light: #e9ecf0;
    --color-black: #000;
    --color-gray: #5D5F63;
    --color-border: #dedede;
    --color-gray-light: #ccd0d6;
    --color-blue: #B2DAE0;
    --color-pink: #FACDCE;

    
    /* Typography */
    --font-family-base: 'Montserrat', sans-serif;
    --font-size-base: 1rem;
    --font-size-xxs: 1.2rem;
    --font-size-xs: 1.4rem;
    --font-size-sm: 1.6rem;
    --font-size-md: 2.2rem;

    /* Font weight */
    --font-weight-base: 400;
    --font-weight-bold: 700;
    
    /* Spacing */
    --spacing-xxs: 0.4rem;
    --spacing-xs: 2rem;
    
    /* Border radius */
    --border-radius-sm: 0.6rem;
    --border-radius-md: 2.2rem;
    
    /* Shadows */
    --shadow-card: 0 0 1.5rem -0.2rem #0000001A;
  }
{% endstyle %}